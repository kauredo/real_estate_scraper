# Rails Application Configuration
# Copy this file to .env and update with your actual values

# Rails Environment
RAILS_ENV=development

# Database Configuration (uses database.yml by default, but DATABASE_URL can override)
# DATABASE_URL=postgresql://username:password@localhost:5432/sofia_galvao_development

# Database Connection Pool (used by database.yml)
RAILS_MAX_THREADS=5
RAILS_MIN_THREADS=5

# JWT Authentication (required for API)
JWT_SECRET=your_jwt_secret_here_change_in_production

# Application Domain (used by base_controller.rb for default_url_options)
APP_DOMAIN=localhost:3000
API_DOMAIN=localhost:3000

# Server Configuration (used by puma.rb)
PORT=3000
PIDFILE=tmp/pids/server.pid

# CORS Configuration (comma-separated list of allowed origins)
# Development: Allow frontend (5173) and backoffice (3001)
CORS_ORIGINS=http://localhost:5173,http://localhost:3001
# Production: Use wildcard patterns for your domains
# CORS_ORIGINS=*.railway.app,*.vercel.app,*yourdomain.com

# Production Database Password (for production deployment)
# SOFIA_GALVAO_DATABASE_PASSWORD=your_production_db_password
