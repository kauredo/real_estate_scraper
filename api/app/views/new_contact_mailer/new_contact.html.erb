<div class="email-title">Novo Contacto Recebido</div>
<div class="email-info">
  <p><strong>Nome:</strong> <%= @name %></p>
  <p><strong>Email:</strong> <%= @email %></p>
  <p><strong>Telefone:</strong> <%= @phone %></p>
  
  <% if @listing %>
    <p>
      <strong>Im√≥vel de Interesse:</strong><br>
      <%= link_to @listing.title, listing_frontend_url(@listing), style: 'color: #d3af79; text-decoration: none;' %>
    </p>
  <% end %>

  <% if @complex %>
    <p>
      <strong>Empreendimento de Interesse:</strong><br>
      <%= link_to @complex.name, listing_complex_frontend_url(@complex), style: 'color: #d3af79; text-decoration: none;' %>
    </p>
  <% end %>
</div>

<div style="margin-top: 2rem;">
  <p><strong>Mensagem:</strong></p>
  <div style="background: #F8F9FA; padding: 1.5rem; border-radius: 8px;">
    <%= simple_format(@message) %>
  </div>
</div>
