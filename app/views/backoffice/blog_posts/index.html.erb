    <p class="text-center text-gray-600 max-w-none">Total <%= @blog_posts.count %> posts</p>
    <br>
    <div class="flex flex-wrap gap-4">
      <% @blog_posts.each do |blog_post| %>
        <%= render 'blog_post', blog_post: %>
      <% end %>
    </div>
  </div>
</div>
