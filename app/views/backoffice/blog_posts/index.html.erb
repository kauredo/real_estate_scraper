<div class="container mx-auto flex flex-col sm:flex-row px-4 flex-wrap">
  <%# VariÃ¡veis %>
  <div class="w-full shadow-md rounded px-2 sm:px-8 py-4 mt-4 relative">
    <div class="mb-6">
      <%= link_to 'Novo Post', new_backoffice_blog_post_path, class: 'bg-beige-default hover:bg-beige-medium text-dark dark:text-dark font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline', data: { "turbo": false } %>
    </div>
