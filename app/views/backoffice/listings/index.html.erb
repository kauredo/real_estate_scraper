      <%= form_with(url: backoffice_listings_path, method: :get, local: true) do |f| %>
        <%= f.select :order, options_for_select([['Ordem normal', 'order'], ['Mais recentes', 'recent']], params[:order]), {}, { class: 'block w-full p-2 border rounded focus:border-blue-500', onchange: 'this.form.submit()' } %>
      <% end%>

    </div>

    <h2 class="text-2xl font-bold leading-7 text-black text-center sm:text-3xl">Im칩veis</h2>
    <p class="text-center text-gray-600 max-w-none">Total <%= @listings.count %> im칩veis</p>
    <%= react_component 'indexPage--Listings', { listings: @listings, backoffice: true }  %>
  </div>
</div>
