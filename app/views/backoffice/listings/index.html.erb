<div class="container mx-auto flex flex-col sm:flex-row px-4 flex-wrap">
  <%# Vari치veis %>
  <div class="w-full shadow-md rounded px-2 sm:px-8 py-4 mt-4">
    <div class="flex flex-col sm:flex-row justify-between items-center flex-wrap">
      <%= form_for(Listing.new, url: update_all_backoffice_listings_path(order: params[:order]), html: { class: 'my-6' }) do |f| %>
        <%= f.submit 'Buscar os im칩veis em falta ao site KW', class: 'cursor-pointer bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
