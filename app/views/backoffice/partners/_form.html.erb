<%= form_with(model: [:backoffice, partner], local: true, class: 'max-w-2xl mx-auto space-y-8') do |f| %>
  <% if partner.errors.any? %>
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
      <h2 class="font-bold mb-2"><%= pluralize(partner.errors.count, "error") %> prohibited this partner from being saved:</h2>
      <ul class="list-disc list-inside">
        <% partner.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
    <h2 class="text-xl font-bold mb-6 text-gray-800 dark:text-gray-200">Partner Details</h2>

    <div class="space-y-6">
      <div class="field mb-4 flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4">
        <%= f.label :name, class: 'sm:w-1/4 font-medium text-gray-700 dark:text-gray-300' %>
        <%= f.text_field :name, class: 'shadow appearance-none bg-white dark:bg-light border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>

      <div class="pt-4">
        <%= f.submit (f.object.persisted? ? 'Update Partner' : 'Create Partner'), 
            class: 'w-full sm:w-auto cursor-pointer bg-beige-default hover:bg-beige-medium text-white dark:text-dark font-bold py-2 px-6 rounded-md transition duration-150 ease-in-out' %>
      </div>
    </div>
  </div>

  <% if partner.persisted? %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mt-8">
      <h3 class="text-xl font-bold mb-6 text-gray-800 dark:text-gray-200">Social Media Posts</h3>

      <%= form_with(model: [:backoffice, partner, SocialMediaPost.new], local: true, class: 'flex flex-col sm:flex-row gap-4 mb-8') do |post_form| %>
        <div class="field mb-4 flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4">
          <%= post_form.text_field :url, 
              placeholder: 'Enter social media URL', 
              class: 'shadow appearance-none bg-white dark:bg-light border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>

          <%= button_tag type: 'submit', class: 'w-full sm:w-auto cursor-pointer bg-beige-default hover:bg-beige-medium text-white dark:text-dark font-bold py-2 px-4 rounded-md transition duration-150 ease-in-out flex items-center justify-center gap-2 whitespace-nowrap' do %>
            <i class="fas fa-plus"></i>
            <span>Add Post</span>
          <% end %>
        </div>
      <% end %>

      <div class="space-y-3">
        <% partner.social_media_posts.each do |post| %>
          <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700 rounded-md border border-gray-200 dark:border-gray-600">
            <span class="text-gray-700 dark:text-gray-300 break-all mr-4"><%= post.url %></span>
            <%= link_to backoffice_partner_social_media_post_path(partner, post),
                class: 'shrink-0 bg-red-500 hover:bg-red-600 text-white py-2 px-3 rounded-md transition duration-150 ease-in-out',
                data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this post?' } do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
