<%= form_with(model: [:backoffice, partner], local: true, class: 'space-y-6') do |f| %>
  <div class="field mb-4 flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4">
    <%= f.label :name, class: 'sm:w-1/4 font-bold' %>
    <%= f.text_field :name, class: 'shadow appearance-none bg-white dark:bg-light border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
  </div>

  <div class="flex sm:items-center gap-2 mb-2 flex-wrap">
    <%= f.submit (f.object.persisted? ? 'Atualizar' : 'Criar').to_s, class: 'cursor-pointer bg-beige-default hover:bg-beige-medium text-dark dark:text-dark font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
  </div>
<% end %>

<% if partner.persisted? %>
  <div class="mt-8">
    <h3 class="text-lg font-bold text-dark dark:text-light mb-4">Social Media Posts</h3>

    <%= form_with(model: [:backoffice, partner, SocialMediaPost.new], local: true, class: 'flex gap-4 mb-6') do |post_form| %>
      <div class="field flex-1">
        <%= post_form.text_field :url, placeholder: 'Social Media URL', class: 'shadow appearance-none bg-white dark:bg-light border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
      </div>
      <%= button_tag type: 'submit', class: 'cursor-pointer bg-beige-default hover:bg-beige-medium text-dark dark:text-dark font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' do %>
        <i class="fas fa-plus mr-2"></i>Adicionar Post
      <% end %>
    <% end %>

    <div class="space-y-4">
      <% partner.social_media_posts.each do |post| %>
        <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-800 rounded">
          <span class="text-sm text-gray-600 dark:text-gray-300"><%= post.url %></span>
          <%= link_to backoffice_partner_social_media_post_path(partner, post),
              class: 'bg-red-500 hover:bg-red-700 text-white dark:text-dark py-1 px-3 rounded',
              data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
