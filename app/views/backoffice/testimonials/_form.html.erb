<div class="field mb-4 flex flex-col sm:flex-row items-center gap-4">
  <%= f.label :name, class: 'w-1/4' %>
  <%= f.text_field :name, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
</div>
<div class="field mb-4 flex flex-col sm:flex-row items-center gap-4">
  <%= f.label :text, class: 'w-1/4' %>
  <%= f.text_field :text, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' %>
</div>
<div class="flex items-center gap-2">
  <%= f.submit (f.object.persisted? ? 'Atualizar' : 'Criar').to_s, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' %>
</div>
