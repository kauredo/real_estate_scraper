<h2 class="text-2xl font-bold leading-7 text-black sm:text-3xl">Resend unlock instructions</h2>
<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class:"bg-blue-200 shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field mb-4">
    <%= f.label :email, class: "block text-gray-700 text-sm font-bold" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>
  <div class="actions flex items-center justify-between">
    <%= f.submit "Resend unlock instructions", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
