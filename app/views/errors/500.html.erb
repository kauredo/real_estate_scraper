<style>
  @import url(https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.min.css);
</style>
<div class="flex-auto bg-white dark:bg-dark flex items-center p-5 lg:p-20 overflow-hidden relative">
  <div class="flex-1 min-h-full min-w-full rounded-3xl bg-white dark:bg-dark shadow-xl p-10 lg:p-20 text-dark dark:text-light  relative md:flex items-center text-center md:text-left">
    <div class="w-full md:w-1/2">
      <div class="mb-10 lg:mb-20">
        <% if dark_mode? %>
          <img loading="lazy" src="/logos/main_white.webp" alt="SGG logo" class="w-48">
        <% else %>
          <img loading="lazy" src="/logos/main.webp" alt="SGG logo" class="w-48">
        <% end %>
      </div>
      <div class="mb-10 md:mb-20 text-gray-600 dark:text-light font-light">
        <h1 class="font-black uppercase text-3xl lg:text-5xl text-beige-default dark:text-beige-dark mb-10"><%= I18n.t('errors.500.title') %></h1>
        <p><%= I18n.t('errors.500.text_1') %></p>
        <p><%= I18n.t('errors.500.text_2') %></p>
      </div>
    </div>
    <div class="w-full md:w-1/2 text-center">
      <%= render 'svgs/500' %>
    </div>
  </div>
</div>
