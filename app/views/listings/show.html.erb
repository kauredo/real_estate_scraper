<% content_for(:meta_title) { @listing.title } %>
<% content_for(:meta_description) { @listing&.description&.squish } %>
<% content_for(:meta_image) { @listing.photos.first } %>
<% content_for(:extra_meta) do %>
  <% slug = @listing.slug || @listing.slug_pt %>
  <link rel="canonical" href="https://sofiagalvaogroup.com/<%= I18n.locale == :pt ? '' : "#{I18n.locale}/" %>comprar/<%= slug %>" />
  <link rel="alternate" hreflang="<%= I18n.locale == :pt ? 'en' : 'pt' %>" href="https://sofiagalvaogroup.com/<%= I18n.locale == :pt ? 'en/' : '' %>comprar/<%= slug %>" />
  <link rel="alternate" hreflang="x-default" href="https://sofiagalvaogroup.com/comprar/<%= slug %>" />
<% end %>
<div id="show" class="relative">
  <%= react_component 'showPage--Show', { listing: @listing }  %>
</div>
