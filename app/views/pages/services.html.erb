<% meta_title = I18n.t('services.header') %>
<% meta_description = I18n.t('services.meta_description') %>

<% content_for(:meta_title) { meta_title } %>
<% content_for(:meta_description) { meta_description } %>
<% content_for(:extra_meta) do %>
  <link rel="canonical" href="https://sofiagalvaogroup.com/<%= I18n.locale == :pt ? '' : "#{I18n.locale}/" %>servicos" />
<% end %>


<%= react_component 'shared--Banner', { height: '20vh', blurred: true, text: meta_title } %>
<div class="container mx-auto mb-12 px-8">
  <div class="pt-6 bg-white text-center md:hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 center">
      <h1 id="main-title" class="relative block md:hidden mt-2 text-3xl text-black sm:text-4xl px-4"><%= meta_title %></h1>
    </div>
  </div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8">
    <p class="mx-auto tablet:text-center mt-2 text-xl text-black sm:text-2xl">
      <%= I18n.t('services.text.top') %>
    </p>
    <p class="mx-auto tablet:text-center mt-4 text-xl text-gray-500">
      <%= sanitize I18n.t('services.text.bottom') %>
      <%= link_to(I18n.t('services.text.link'), contact_path, class: 'text-beige underline') %>
    </p>
  </div>
  <section class="pt-6">
    <div class="items-center flex flex-wrap h-min py-6 lg:min-h-[20rem]">
      <div class="w-full md:w-4/12 ml-auto mr-auto px-4 py-8">
        <%= render 'svgs/house_trees' %>
      </div>
      <div class="w-full md:w-1/2 lg:w-5/12 ml-auto mr-auto px-4">
        <div class="lg:pr-12">
          <h3 class="text-3xl "><%= I18n.t('services.list.house_trees.title') %></h3>
          <p class="mt-4 text-lg leading-relaxed text-blueGray-500">
            <%= sanitize I18n.t('services.list.house_trees.description') %>
          </p>
        </div>
      </div>
    </div>
    <div class="items-center flex md:flex-row flex-col-reverse flex-wrap h-min py-6 lg:min-h-[20rem] bg-white">
      <div class="w-full md:w-1/2 lg:w-5/12 ml-auto mr-auto px-4">
        <div class="lg:pl-12">
          <h3 class="text-3xl "><%= I18n.t('services.list.house_lens.title') %></h3>
          <p class="mt-4 text-lg leading-relaxed text-blueGray-500">
            <%= sanitize I18n.t('services.list.house_lens.description') %>
          </p>
        </div>
      </div>
      <div class="w-full md:w-4/12 ml-auto mr-auto px-4 py-8">
        <%= render 'svgs/house_lens' %>
      </div>
    </div>
  </section>
</div>
