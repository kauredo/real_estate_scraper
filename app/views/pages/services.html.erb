<% meta_title = I18n.t('services.header') %>
<% meta_description = I18n.t('services.meta_description') %>

<% content_for(:meta_title) { meta_title } %>
<% content_for(:meta_description) { meta_description } %>
<% content_for(:extra_meta) do %>
  <link rel="canonical" href="https://sofiagalvaogroup.com/<%= I18n.locale == :pt ? '' : "#{I18n.locale}/" %>servicos" />
  <link rel="alternate" hreflang="<%= I18n.locale == :pt ? 'en' : 'pt' %>" href="https://sofiagalvaogroup.com/<%= I18n.locale == :pt ? 'en/' : '' %>servicos" />
<% end %>


<%= react_component 'shared--Banner', { height: '20vh', blurred: true, text: meta_title } %>
<div class="container mx-auto mb-12 px-8">
  <!-- Header Section -->
  <div class="pt-6 bg-white dark:bg-dark text-center md:hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 center">
      <h1 id="main-title" class="relative block md:hidden mt-2 text-3xl text-dark dark:text-light  sm:text-4xl px-4"><%= meta_title %></h1>
    </div>
  </div>

  <!-- Introduction Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8">
    <p class="mx-auto tablet:text-center mt-2 text-xl text-dark dark:text-light  sm:text-2xl">
      <%= I18n.t('services.text.top') %>
    </p>
    <p class="mx-auto tablet:text-center mt-4 text-xl text-gray-500 dark:text-light">
      <%= sanitize I18n.t('services.text.bottom') %>
      <%= link_to(I18n.t('services.text.link'), contact_path, class: 'text-beige-default dark:text-beige-dark underline') %>
    </p>
  </div>

  <!-- Existing Service Cards -->
  <section class="pt-6 text-black dark:text-light">
    <div class="items-center flex flex-wrap h-min py-6 lg:min-h-[20rem]">
      <div class="w-full md:w-4/12 ml-auto mr-auto px-4 py-8">
        <%= render 'svgs/house_trees' %>
      </div>
      <div class="w-full md:w-1/2 lg:w-5/12 ml-auto mr-auto">
        <div class="lg:pr-8">
          <h3 class="text-3xl "><%= I18n.t('services.list.house_trees.title') %></h3>
          <p class="mt-4 text-lg leading-relaxed text-blueGray-500">
            <%= sanitize I18n.t('services.list.house_trees.description') %>
          </p>
        </div>
      </div>
    </div>
    <div class="items-center flex md:flex-row flex-col-reverse flex-wrap h-min py-6 lg:min-h-[20rem] bg-white dark:bg-dark">
      <div class="w-full md:w-1/2 lg:w-5/12 ml-auto mr-auto">
        <div class="lg:pl-8">
          <h3 class="text-3xl "><%= I18n.t('services.list.house_lens.title') %></h3>
          <p class="mt-4 text-lg leading-relaxed text-blueGray-500">
            <%= sanitize I18n.t('services.list.house_lens.description') %>
          </p>
        </div>
      </div>
      <div class="w-full md:w-4/12 ml-auto mr-auto px-4 py-8">
        <%= render 'svgs/house_lens' %>
      </div>
    </div>
  </section>

  <!-- Tailor House Section -->
  <section class="pt-10 mt-6 text-black dark:text-light">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-center"><%= I18n.t('services.tailor_house.title') %></h2>
      <p class="mt-4 text-xl leading-relaxed text-gray-600 text-center mx-auto">
        <%= sanitize I18n.t('services.tailor_house.subtitle') %>
      </p>
      <p class="mt-4 text-lg leading-relaxed text-blueGray-500 mx-auto">
        <%= sanitize I18n.t('services.tailor_house.description') %>
      </p>
    </div>
  </section>

  <section class="max-w-7xl mx-auto pt-10 mt-6 flex justify-between flex-wrap text-black dark:text-light">
    <!-- For Sellers Column -->
    <div class="w-full md:w-1/2 sm:pr-6 sm:pl-6 lg:pl-8">
      <h2 class="text-4xl font-bold text-center"><%= I18n.t('services.for_sellers.title') %></h2>
      <p class="mt-4 text-xl leading-relaxed text-gray-600 text-center mx-auto">
        <%= sanitize I18n.t('services.for_sellers.subtitle') %>
      </p>
      <% services_for_sellers = I18n.t('services.for_sellers.list') %>
      <% services_for_sellers.each do |_service_title, service| %>
        <div class="mt-6">
          <h3 class="text-2xl font-semibold"><%= service[:title] %>:</h3>
          <p class="mt-2 text-lg leading-relaxed text-blueGray-500">
            <%= sanitize service[:description] %>
          </p>
        </div>
      <% end %>
    </div>

    <!-- For Buyers Column -->
    <div class="w-full md:w-1/2 sm:pl-6 sm:pr-6 lg:pr-8 pt-10 md:pt-0 text-black dark:text-light">
      <h2 class="text-4xl font-bold text-center"><%= I18n.t('services.for_buyers.title') %></h2>
      <p class="mt-4 text-xl leading-relaxed text-gray-600 text-center mx-auto">
        <%= sanitize I18n.t('services.for_buyers.subtitle') %>
      </p>
      <% services_for_buyers = I18n.t('services.for_buyers.list') %>
      <% services_for_buyers.each do |_service_title, service| %>
        <div class="mt-6">
          <h3 class="text-2xl font-semibold"><%= service[:title] %>:</h3>
          <p class="mt-2 text-lg leading-relaxed text-blueGray-500">
            <%= sanitize service[:description] %>
          </p>
        </div>
      <% end %>
    </div>
  </section>

</div>
